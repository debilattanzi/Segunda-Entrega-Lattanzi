<h1>Productos en Tiempo Real</h1>


<ul id="listaProductos">
  <!-- Acá se insertarán los productos con JS -->
</ul>

<h2>Agregar Producto</h2>
<form id="formAgregar">
  <input name="title" placeholder="Nombre" required />
  <input name="price" type="number" placeholder="Precio" required />
  <button type="submit">Agregar</button>
</form>

<h2>Eliminar Producto</h2>
<form id="formEliminar">
  <input name="id" type="number" placeholder="ID producto a eliminar" required />
  <button type="submit">Eliminar</button>
</form>

